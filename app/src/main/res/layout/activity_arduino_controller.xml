<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#3FBDEB"
    android:padding="10dp">

    <Button
        android:id="@+id/control_A"
        android:layout_width="250dp"
        android:layout_height="70dp"
        android:backgroundTint="@android:color/transparent"
        android:layout_centerHorizontal="true"
        android:text="Buzzer ON"
        android:textSize="25sp" />

    <Button
        android:id="@+id/control_B"
        android:layout_width="250dp"
        android:layout_height="70dp"
        android:layout_below="@+id/control_A"
        android:layout_centerHorizontal="true"
        android:backgroundTint="@android:color/transparent"
        android:text="Buzzer OFF"
        android:textSize="25sp"
        />

    <Button
        android:id="@+id/control_C"
        android:layout_width="150dp"
        android:layout_height="70dp"
        android:layout_below="@+id/control_B"
        android:layout_centerHorizontal="true"
        android:backgroundTint="@android:color/transparent"
        android:text="C"
        android:textSize="25sp"
        />

    <Button
        android:id="@+id/control_D"
        android:layout_width="150dp"
        android:layout_height="70dp"
        android:layout_below="@+id/control_C"
        android:layout_centerHorizontal="true"
        android:backgroundTint="@android:color/transparent"
        android:text="D"
        android:textSize="25sp"
        />

    <Button
        android:id="@+id/control_E"
        android:layout_width="150dp"
        android:layout_height="70dp"
        android:layout_below="@+id/control_D"
        android:layout_centerHorizontal="true"
        android:backgroundTint="@android:color/transparent"
        android:text="E"
        android:textSize="25sp"
        />

    <Button
        android:id="@+id/control_F"
        android:layout_width="150dp"
        android:layout_height="70dp"
        android:layout_below="@+id/control_E"
        android:layout_centerHorizontal="true"
        android:backgroundTint="@android:color/transparent"
        android:text="F"
        android:textSize="25sp"
        />
    <Button

        android:id="@+id/control_led_disconnect"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:layout_below="@+id/control_F"
        android:layout_centerHorizontal="true"
        android:text="DISCONNECT"
        android:backgroundTint="@android:color/transparent"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/temp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/control_led_disconnect"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="21dp"
        android:text=""
        android:textSize="25sp" />
</RelativeLayout>